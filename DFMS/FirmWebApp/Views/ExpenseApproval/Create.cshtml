@using static Firm.Utility.Miscellaneous.Enum;
@model ExpenseApprovalServiceVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int SN = 1;
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active">expense</li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-plus"></i> Back to List </a>
            </div>
        </div>
    </div>
</div>
<section class="content">

    <div class="card-header">
        <h5 class="card-title">Expenses</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="ExpenseApproval" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-warning">
                    @ViewData["ErrorMessage"]
                </div>
            }
    <div class="modal-body">
        <!-- Add your content here -->
        <div class="row mx-2">
            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="ExpenseDate" class="control-label">Expense Date</label>
                    <input asp-for="ExpenseDate" type="date" class="form-control">
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="RefNo" class="control-label">Voucher No</label>
                    <input asp-for="RefNo" class="form-control">
                </div>
            </div>
         

            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="PaymentModeId" class="control-label"> Payment Mode </label>
                            <select asp-for="PaymentModeId" asp-items="Html.GetEnumSelectList<PaymentMode>()" class="form-control"></select>
                </div>
            </div>

            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="ExpenseItemId" class="control-label"> Expense Item </label>
                            <select asp-for="ExpenseItemId" asp-items="Html.GetEnumSelectList<ExpenseType>()" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"> Amount </label>
                    <input asp-for="Amount" class="form-control">


                </div>
            </div>

            <div class="col-md-4 col-sm-12 col-lg-4">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Desciption</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Details" maxlength="100"></textarea>
                </div>
            </div>

                    <div class="col-md-4 col-sm-12 col-lg-4">
                        <div class="form-group">
                            <button type="button" id="ExpenseAddButton" onclick="adding()" class="btn btn-info d-inline-block update-group text-right" style="width:fit-content;height:fit-content">
                                Add More
                            </button>
                        </div>
                    </div>

                    <div id="tableDiv" class="col-md-12 mb-3" style="display:none">
                        <div class="row" id="formRowId">
                            <table id="table" class="border  table-striped table-bordered">

                                <thead class="text-center">
                                <th scope="col" style="width:90px">ExpenseItem</th>
                                <th scope="col" style="width:90px">Amount</th>
                                <th scope="col" style="width:60px">Action</th>
                                </thead>

                                <tbody id="tablebody" class="text-center">
                                </tbody>
                            </table>
                        </div>
                    </div>

        </div>


    </div>
            <div class="col-md-12 mt-3">
                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/expensejs.js"></script>
        <link href="~/css/yearpicker/yearpicker.css" rel="stylesheet" />
    }
   
    <script>
        $(document).ready(function () {
            $('#Expenses').addClass('menu-open');
            $('#ExpenseApproval').addClass('active');

        });
    </script>
    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500,).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>
  }
