@using Firm.Service.Services.Employee_Services;
@using static Firm.Utility.Miscellaneous.Enum
@model List<EmployeeServiceVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int SN = 1;
}


<section class="content-header">
    <h3>
        Employee List
    </h3>
</section>

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active">Employee</li>
            </ol>
            <div>
                <a asp-action="Create"><i class="fa fa-plus"></i>Add New Employee</a>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-danger">
                        <div class="box-body">
                            <div class="table-responsive">
                                <table id="KgErpDataTable" style="width:100%; background-color:#ddd;" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>DateOfBirth</th>
                                            <th>Father Name</th>
                                            <th>Mother Name</th>
                                            <th>Marital Status</th>
                                            <th>Age</th>
                                            <th>Picture</th>
                                            <th>Gender</th>
                                            <th>National Id</th>
                                            <th>Religion</th>
                                            <th>Mobile No</th>
                                            <th>Email</th>
                                            <th>Permanent Address</th>
                                            <th>Present Address</th>
                                            <th>Blood Group</th>
                                            <th>IsActive</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @{
                                        int sl = 0;
                                    }
                                    <tbody>
                                        @foreach (var employee in Model.Where(x => x.IsActive == true && x.IsDeleted == false))
                                        {
                                            <tr>
                                                <td>@SN</td>
                                                <td>@employee.FirstName</td>
                                                <td>@employee.LastName</td>
                                                <td>@employee.DateOfBirth</td>
                                                <td>@employee.FatherName</td>
                                                <td>@employee.MotherName</td>
                                                <td>@employee.MaritalStatus</td>
                                                <td>@employee.Age</td>
                                                <td>
                                                    <img src="@employee.Image" alt="@employee.FirstName" width="100" height="100">
                                                </td>
                                                <td>@employee.Gender</td>
                                                <td>@employee.NationalId</td>
                                                <td>@employee.Religion</td>
                                                <td>@employee.MobileNo</td>
                                                <td>@employee.Email</td>
                                                <td>@employee.PermanentAddress</td>
                                                <td>@employee.PresentAddress</td>
                                                <td>@employee.BloodGroup</td>
                                                <td>@employee.IsActive</td>
                                                <td>
                                                    <a asp-action="Edit" asp-controller="Employee" class="btn btn-outline-success btn-sm" asp-route-id="@employee.Id">
                                                        <i class="fa fa-edit" style="font-size:15px;" aria-hidden="true"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-controller="Employee" class="btn btn-outline-warning btn-sm" asp-route-id="@employee.Id">
                                                        <i class="fa fa-list-alt" style="font-size:15px;" aria-hidden="true"></i>
                                                    </a>

                                                    <a asp-action="Delete" asp-controller="Employee" class="btn btn-outline-danger btn-sm" asp-route-id="@employee.Id">
                                                        <i class="fa fa-trash" style="font-size:15px;" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            SN++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#Health').addClass('menu-open');
            $('#NewEmployee').addClass('active');

            $('#employeetable').DataTable({
                // Configure DataTable options
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'desc']],
            });

        });
    </script>
  }
