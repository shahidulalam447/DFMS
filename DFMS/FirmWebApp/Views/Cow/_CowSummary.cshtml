@model CowServiceViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DFMS - Cow Summary</title>

    <link href="~/AdminLib/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <style>
        /* IMPORTANT: Razor-safe CSS at-rules => use @@ */

        @@page {
            size: A4;
            margin: 14mm;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            a[href]:after {
                content: "" !important;
            }
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            color: #111;
            background: #fff;
        }

        .report {
            max-width: 780px;
            margin: 0 auto;
        }

        .header {
            display: grid;
            grid-template-columns: 90px 1fr 180px;
            gap: 12px;
            align-items: center;
            padding-bottom: 10px;
            border-bottom: 2px solid #222;
            margin-bottom: 14px;
        }

        .logo {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }

        .title {
            font-size: 18px;
            font-weight: 700;
            margin: 0;
        }

        .sub {
            margin: 2px 0 0 0;
            color: #444;
        }

        .meta {
            text-align: right;
            font-size: 11px;
            color: #444;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 12px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 7px 8px;
            vertical-align: top;
        }

        th {
            background: #f5f5f5;
            text-align: left;
            font-weight: 700;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .good {
            color: #0a7a2f;
            font-weight: 700;
        }

        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .section-title {
            font-size: 13px;
            font-weight: 700;
            text-transform: uppercase;
            margin: 14px 0 8px;
            letter-spacing: .3px;
        }

        .btn-print {
            display: inline-flex;
            gap: 8px;
            align-items: center;
            padding: 8px 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            text-decoration: none;
            color: #111;
            background: #fff;
        }
    </style>
</head>

<body>

    <!-- Screen only -->
    <div class="no-print" style="max-width:780px;margin:14px auto;text-align:right;">
        <a class="btn-print" href="javascript:window.print()">
            <i class="fa fa-print"></i> Print Report
        </a>
    </div>

    <div class="report">

        <div class="header">
            <div>
                <img class="logo" src="~/kgfiles/firmlogo.png" alt="DFMS Logo" />
            </div>

            <div>
                <h1 class="title">DAIRY FIRM MANAGEMENT SYSTEM (DFMS)</h1>
                <p class="sub"><strong>Sylhet, Bangladesh</strong> · Phone: 01700000000</p>
                <p class="sub">
                    Cow Tag: <strong>@Model.TagId</strong> · Type: <strong>@Model.LivestockTypeName</strong> · Breed: <strong>@Model.BreedName</strong>
                </p>
            </div>

            <div class="meta">
                <div><strong>Cow Summary Report</strong></div>
                <div>Print Date: @DateTime.Now.ToString("dd MMM yyyy, hh:mm tt")</div>
            </div>
        </div>

        <div class="section-title">Summary</div>

        <table>
            <thead>
                <tr>
                    @* <th>Tag & Type</th>
                    <th>Breed</th> *@
                    <th class="text-right">Buying Price (A)</th>
                    <th class="text-right">Treatment Cost (B)</th>
                    <th class="text-right">Vaccine Cost (C)</th>
                    <th class="text-right">Feeding Cost (D)</th>
                    <th class="text-right">Total Cost (E)</th>
                    <th class="text-right">Milk Produced (F)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
 
                    <!-- SAFE FORMATTING -->
                    <td class="text-right">@string.Format("{0:0.00}", Model.Price)</td>
                    <td class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalTreatmentCost)</td>
                    <td class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalVaccineCost)</td>
                    <td class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalFeedingCost)</td>
                    <td class="text-right">@string.Format("{0:0.00}", (Model.cowSummaryVM.TotalExpense ?? 0))</td>

                    <td class="text-right good">
                        @Model.cowSummaryVM.TotalMilkProduced <span style="color:#555;">litre</span>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="grid-2">
            <div>
                <div class="section-title">Milk</div>
                <table>
                    <thead>
                        <tr><th>Total Produced Milk</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-right">
                                <strong>@Model.cowSummaryVM.TotalMilkProduced</strong> <span style="color:#555;">litres</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div>
                <div class="section-title">Feeding</div>
                <table>
                    <thead>
                        <tr>
                            <th class="text-right">Total Quantity</th>
                            <th class="text-right">Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-right">@Model.cowSummaryVM.TotalFeedingQuantity</td>
                            <td class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalFeedingCost)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="grid-2">
            <div>
                <div class="section-title">Vaccine</div>
                <table>
                    <thead>
                        <tr>
                            <th style="width:28%;">Date</th>
                            <th>Description</th>
                            <th class="text-right" style="width:22%;">Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vaccine in Model.vaccineVMList)
                        {
                            <tr>
                                <td>@vaccine.VaccineDate</td>
                                <td>@vaccine.Name</td>
                                <td class="text-right">@string.Format("{0:0.00}", vaccine.Price)</td>
                            </tr>
                        }
                        <tr>
                            <th colspan="2" class="text-right">Total Vaccine Cost</th>
                            <th class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalVaccineCost)</th>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div>
                <div class="section-title">Treatment</div>
                <table>
                    <thead>
                        <tr>
                            <th style="width:28%;">Date</th>
                            <th>Description</th>
                            <th class="text-right" style="width:22%;">Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var treatement in Model.treatmentVMList)
                        {
                            <tr>
                                <td>@treatement.TreatmentDate</td>
                                <td>@treatement.TreatmentDetails</td>
                                <td class="text-right">@string.Format("{0:0.00}", treatement.Price)</td>
                            </tr>
                        }
                        <tr>
                            <th colspan="2" class="text-right">Total Treatment Cost</th>
                            <th class="text-right">@string.Format("{0:0.00}", Model.cowSummaryVM.TotalTreatmentCost)</th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
