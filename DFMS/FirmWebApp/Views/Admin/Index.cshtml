@using static Firm.Utility.Miscellaneous.Enum
@model CowSummaryVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    /* ===============================
       DASHBOARD TITLE
    ================================*/
    .dashboard-title {
        font-family: 'Segoe UI', 'Inter', 'Roboto', sans-serif;
        font-size: 2.1rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        color: #1f2937;
        padding: 14px 22px;
        border-left: 6px solid #22c55e;
        background: linear-gradient( 90deg, rgba(34, 197, 94, 0.08), rgba(255, 255, 255, 0) );
        border-radius: 8px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        display: flex;
        align-items: center;
        text-transform: capitalize;
    }

        .dashboard-title::before {
            content: "📊";
            font-size: 1.4rem;
            margin-right: 12px;
        }

    /* Razor-safe media query */
    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 1.6rem;
            padding: 12px 16px;
        }
    }

    /* ===============================
       SMALL BOX
    ================================*/
    .small-box {
        position: relative;
        background-color: #4caf50;
        color: #ffffff;
        padding: 20px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        transition: all .3s ease;
    }

        .small-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.25);
        }

        /* watermark image */
        .small-box::after {
            content: "";
            position: absolute;
            right: -20px;
            bottom: -20px;
            width: 120px;
            height: 120px;
            background: url('/kgfiles/cow.png') no-repeat center;
            background-size: contain;
            opacity: 0.15;
        }

        .small-box h3 {
            font-size: 36px;
            font-weight: 800;
        }

        .small-box p {
            font-size: 18px;
            margin: 0;
        }
</style>

<!-- ===============================
     HEADER
================================-->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-10">
                <h1 class="m-0 dashboard-title">
                    Dashboard: Dairy Firm Management System (DFMS)
                </h1>
            </div>
            <div class="col-sm-2 p-2">
                <a asp-controller="UserManagement"
                   asp-action="CreateUser"
                   class="btn btn-primary">
                    Create New User
                </a>
            </div>
        </div>
    </div>
</div>

<!-- ===============================
     DASHBOARD CONTENT
================================-->
<section>
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.Totalcow</h3>
                        <p>Total Cow</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalOX</h3>
                        <p>Total OX</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalHeifer</h3>
                        <p>Total Heifer</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalCalf</h3>
                        <p>Total Calf</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.YesterdayTotalMilk.ToString("F2")</h3>
                        <p>Yesterday Total Milk</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalMilkProduced.ToString("F2")</h3>
                        <p>Last 30 Days Milk</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalTreatmentCost.ToString("F2") /-</h3>
                        <p>30 Days Medical Expense</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box">
                    <div class="inner text-center">
                        <h3>@Model.TotalFeedingCost.ToString("F2") /-</h3>
                        <p>Last 30 Days Feed Expense</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
